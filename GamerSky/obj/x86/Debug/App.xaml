<Application
    x:Class="GamerSky.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GamerSky"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <!--主题色-->
                    <Color x:Key="ThemeColor">#fe0103</Color>
                    <SolidColorBrush x:Key="ThemeColorBrush" Color="#fe0103"/>
                    <!--Pane背景色-->
                    <SolidColorBrush x:Key="PaneBackgroundBrush" Color="White"/>
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <!--主题色-->
                    <Color x:Key="ThemeColor">#FF333337</Color>
                    <SolidColorBrush x:Key="ThemeColorBrush" Color="#fe0103"/>

                    <!--Pane背景色-->
                    <SolidColorBrush x:Key="PaneBackgroundBrush" Color="#FF5F5F5F"/>


                </ResourceDictionary>


            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
     
    <!--#region Brushes-->

    <!--#endregion-->
</Application>

