<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:GamerSky.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Controls/ImageEx/ImageEx.xaml" />
        <ResourceDictionary Source="/Controls/GridSplitter/GridSplitter.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="controls:RadioButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:RadioButton">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
