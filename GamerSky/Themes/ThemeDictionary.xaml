            <SolidColorBrush x:Key="PivotHeaderForegroundSelectedBrush" Color="White" />
            <!--PivotHeader 未选中的颜色 灰色-->
            <SolidColorBrush x:Key="PivotHeaderForegroundUnselectedBrush" Color="#CCCCCC" />
            <!--文字颜色-->
            <SolidColorBrush x:Key="PhoneForegroundBrush" Color="LightGray"/>
            <!--页面背景色-->
            <SolidColorBrush x:Key="PageBackground" Color="#FF1A1A1B"/>
            <!--ListView BorderBrush-->
            <SolidColorBrush x:Key="ListViewBorderBrush" Color="#FF3C3C3C"/>
            <!--ListView BorderThickness-->
            <Thickness x:Key="ListViewBorderThickness">0,0,0,1</Thickness>
            <!--设置ListViewItem背景色-->
            <SolidColorBrush x:Key="SearchListViewItemBackground" Color="#FF252526"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
    


</ResourceDictionary>

    
