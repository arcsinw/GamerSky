    xmlns:local="using:GamerSky.Controls"
    xmlns:controls="using:Arcsinx.Toolkit.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Background="#CC000000">

    <Grid CornerRadius="2" Background="White" Width="300" MinHeight="120" Height="Auto"
