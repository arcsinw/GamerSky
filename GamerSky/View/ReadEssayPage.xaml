            </FlipView.Items>
        </FlipView>

        <ProgressRing x:Name="progress" IsActive="{Binding IsActive}" Style="{ThemeResource ProgressRingStyle}"/>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Orientation="Horizontal">
            <Button x:Name="translateBtn" Visibility="Collapsed"  HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" Style="{ThemeResource BackButtonStyle}" >
                <SymbolIcon Symbol="Character" />
            </Button>

            <Button x:Name="likeBtn" HorizontalAlignment="Right" Click="likeBtn_Click"
                VerticalAlignment="Bottom" Style="{ThemeResource BackButtonStyle}" Background="Transparent">
                <PathIcon HorizontalAlignment="Center" VerticalAlignment="Center" Data="{Binding CurrentEssay.IsFavorite,Converter={StaticResource BoolToIconConverter}}"/>
            </Button>

            <!--#region  底部右边的调整按钮-->
            <Button Style="{ThemeResource BackButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Button.Flyout>
                    <Flyout >
                        <Flyout.FlyoutPresenterStyle>
                            <Style TargetType="FlyoutPresenter">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                            </Style>
                        </Flyout.FlyoutPresenterStyle>
                        <Flyout.Content>
                            <ListView Padding="0" Margin="0" SelectionMode="None"
                                ScrollViewer.VerticalScrollMode="Disabled">
                                <ListView.Resources>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Margin" Value="0,0,12,0"/>
                                    </Style>
                                </ListView.Resources>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListViewItem>
                                    <Grid HorizontalAlignment="Stretch" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left">
                                            <TextBlock Text="夜间模式" VerticalAlignment="Center" />
                                        </StackPanel>

                                        <CheckBox Grid.Column="1" MinWidth="0" x:Name="nightCheckBox" IsChecked="{Binding AppTheme,Converter={StaticResource ElementThemeToBoolConverter}}"
                                            Checked="nightCheckBox_Checked" Unchecked="nightCheckBox_Unchecked"
                                            HorizontalAlignment="Right"/>
                                    </Grid>
                                </ListViewItem>
                                <ListViewItem>
                                    <Grid HorizontalAlignment="Stretch" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left">
                                            <TextBlock Text="字体" VerticalAlignment="Center" />
                                        </StackPanel>

                                        <Slider Grid.Column="1"  x:Name="fontSlider" Value="{Binding EssayFontSize,Mode=TwoWay}"
                                                 Minimum="12" Maximum="30"  IsThumbToolTipEnabled="True" StepFrequency="1" 
                                                ValueChanged="fontSlider_ValueChanged" Style="{StaticResource LightSliderStyle}"/>
                                    </Grid>
                                </ListViewItem>
                                <ListViewItem>
                                    <Grid HorizontalAlignment="Stretch" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left">
                                            <TextBlock Text="非WiFi无图" VerticalAlignment="Center" />
                                        </StackPanel>
                                        <CheckBox x:Name="noImg" Checked="noImg_Checked"
                                                  Unchecked="noImg_Unchecked" 
                                                  IsChecked="{Binding IsNoImgMode}"
                                                  Grid.Column="1" MinWidth="0" HorizontalAlignment="Right"/>
                                    </Grid>
                                </ListViewItem>
                                <ListViewItem x:Name="edgeListViewItem" Tapped="edgeListViewItem_Tapped">
                                    <TextBlock Text="浏览器打开"/>
                                </ListViewItem>
                                <ListViewItem>
                                    <Grid HorizontalAlignment="Stretch" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left">
                                            <TextBlock Text="刷新页面" VerticalAlignment="Center" />
                                        </StackPanel>

                                        <Button Grid.Column="1" HorizontalAlignment="Right" x:Name="refreshButton" Click="refreshButton_Click" Background="Transparent">
                                            <Button.Content>
                                                <SymbolIcon Symbol="Refresh"/>
                                            </Button.Content>
                                        </Button>
                                    </Grid>
                                </ListViewItem>
                            </ListView>

                        </Flyout.Content>
                    </Flyout>

                </Button.Flyout>
                <Button.Content>
                    <SymbolIcon Symbol="Font"/>
                </Button.Content>
            </Button>
            <!--#endregion-->

        </StackPanel>

        <!--#region  显示图片-->
        <FlipView x:Name="imageFlipView" Visibility="Collapsed" 
                  ItemsSource="{x:Bind Images,Mode=OneWay}" 
                  Tapped="imageFlipView_Tapped">
            <FlipView.Background>
                <SolidColorBrush Color="Black" Opacity="0.8"/>
            </FlipView.Background>
            <FlipView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <ScrollViewer IsDeferredScrollingEnabled="True" 
                                    ZoomSnapPointsType="Mandatory"
                                    MaxZoomFactor="5"
                                    MinZoomFactor="1"                                    
                                    ScrollViewer.IsZoomChainingEnabled="True"
                                    ScrollViewer.IsZoomInertiaEnabled="True"
                                    ScrollViewer.ZoomMode="Enabled">
                            <Image Source="{Binding src}">
                                <!--<Image.Source>
                                    <BitmapImage UriSource="{Binding src}"/>
                                </Image.Source>-->
                            </Image>
                        </ScrollViewer>
                    </Grid>
                </DataTemplate>
            </FlipView.ItemTemplate>
        </FlipView>

        <TextBlock VerticalAlignment="Bottom" Margin="12" Foreground="White"
                Visibility="{Binding ElementName=imageFlipView,Path=Visibility}">
            <Run Text="{Binding ElementName=imageFlipView,Path=SelectedIndex,Converter={StaticResource AddConverter}}" />
            <Run Text="/"/>
            <Run x:Name="countRun" Text="{x:Bind Images.Count,Mode=OneWay}"/>
        </TextBlock>
        <!--#endregion-->

        <CommandBar x:Name="commandBar" VerticalAlignment="Bottom" Visibility="Collapsed">
            <CommandBar.PrimaryCommands>
                <AppBarButton Icon="Save" x:Uid="Save" Click="saveAppBar_Click"/>
                <!--<AppBarButton Label="HD" >
                    <AppBarButton.Icon>
                        <BitmapIcon UriSource="ms-appx:///Assets/Images/picture_origin.png"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton x:Uid="Share">
                    <AppBarButton.Icon>
                        <BitmapIcon UriSource="ms-appx:///Assets/Images/Share.png"/>
                    </AppBarButton.Icon>
                </AppBarButton>-->
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Grid>
</Page>
