<Page
    x:Class="游民星空.View.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:游民星空.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="{x:Bind AppTheme,Mode=OneWay}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="{ThemeResource ThemeColorBrush}">
            <Button x:Name="back"  Click="{x:Bind Back}"
                    Style="{ThemeResource BackButtonStyle}" Grid.Column="0">
                <SymbolIcon Symbol="Back"/>
            </Button>
            <TextBlock Text="关于" Style="{ThemeResource PageTitleStyle}"/>
        </Grid>
        <Grid Grid.Row="1" Background="{ThemeResource PageBackground}">
            <ScrollViewer ScrollViewer.VerticalScrollMode="Enabled">
                <StackPanel Padding="8" >
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="Margin" Value="4"/>
                        </Style>
                    </StackPanel.Resources>
                    <Image Margin="0,20" Source="ms-appx:///Assets/Square150x150Logo.png" 
                           Height="110" Width="110"/>
                    <TextBlock Text="{x:Bind Version}" HorizontalAlignment="Center" />
                    <TextBlock Text="{x:Bind Author}" HorizontalAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center">
                        <Run Text="还没写完，侵权就下架"/>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center" x:Name="qqTextBlock" Tapped="{x:Bind CopyToClipboard}" Text="473967668"  />
                    <HyperlinkButton Content="评论" NavigateUri="ms-windows-store://review/?ProductId=9NBLGGH5Q5TJ"
                                     HorizontalAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
