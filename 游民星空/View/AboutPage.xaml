<Page
    x:Class="游民星空.View.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:游民星空.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="{x:Bind AppTheme,Mode=OneWay}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="{ThemeResource ThemeColorBrush}">
            <Button x:Name="back"  Click="{x:Bind Back}"
                    Style="{ThemeResource BackButtonStyle}" Grid.Column="0">
                <SymbolIcon Symbol="Back"/>
            </Button>
            <TextBlock Text="关于" Style="{ThemeResource PageTitleStyle}"/>
        </Grid>
        <Grid Grid.Row="1" Background="{ThemeResource PageBackground}">
            <ScrollViewer ScrollViewer.VerticalScrollMode="Enabled" >
                <StackPanel Padding="8" >
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="Margin" Value="4"/>
                        </Style>
                    </StackPanel.Resources>
                    <Image Margin="0,16" Source="ms-appx:///Assets/Square150x150Logo.png" 
                           Height="100" Width="100"/>
                    <TextBlock Text="{x:Bind Version}" HorizontalAlignment="Center" />
                    <TextBlock Text="{x:Bind Author}" HorizontalAlignment="Center"/>
                    <TextBlock HorizontalAlignment="Center" x:Name="qqTextBlock" Tapped="{x:Bind CopyToClipboard}" Text="QQ群：473967668"  />
                    <HyperlinkButton  NavigateUri="ms-windows-store://review/?ProductId=9NBLGGH5Q5TJ"
                                     HorizontalAlignment="Center" >
                        <HyperlinkButton.Content>
                            <TextBlock Text="评论"/>
                        </HyperlinkButton.Content>
                    </HyperlinkButton>
                    <HyperlinkButton  Click="{x:Bind VersionHistory}" HorizontalAlignment="Center">
                        <HyperlinkButton.Content>
                            <TextBlock Text="更新记录"/>
                        </HyperlinkButton.Content>
                    </HyperlinkButton>
                    <!--<TextBlock HorizontalAlignment="Center">
                        <Run>感谢</Run><LineBreak/>
                        <Run>PullToRefresh.UWP</Run><LineBreak/>
                        <Run>AsyncTaskTraceEx</Run>
                    </TextBlock>-->
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
