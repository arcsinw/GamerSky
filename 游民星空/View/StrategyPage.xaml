    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot x:Name="pivot"  
               SelectionChanged="Pivot_SelectionChanged" Style="{StaticResource StrategyPivotStyle}">

            <PivotItem Header="关注" Margin="0" Padding="0" SizeChanged="PivotItem_SizeChanged">
                <pr:PullToRefreshBox RefreshInvoked="PullToRefreshBox_RefreshInvoked">
                <GridView ItemsSource="{Binding FocusStrategys}" Padding="8"
                          ItemsPanel="{StaticResource GridViewItemsPanel}"
                          SelectionMode="None"
                          ShowsScrollingPlaceholders="True"
                              IsItemClickEnabled="True"
                              ItemClick="GridView_ItemClick">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup>
                                <VisualState x:Name="Narrow">

                                    <VisualState.StateTriggers>
                                        <AdaptiveTrigger MinWindowWidth="480"/>
                                    </VisualState.StateTriggers>

                                    <VisualState.Setters>
                                        <Setter Target="GridViewItemsPanel.MaximumRowsOrColumns" Value="2"/>
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="Medium">
                                    <VisualState.StateTriggers>
                                        <AdaptiveTrigger  MinWindowWidth="720"/>
                                    </VisualState.StateTriggers>

                                    <VisualState.Setters>
                                        <Setter Target="GridViewItemsPanel.MaximumRowsOrColumns" Value="4"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

